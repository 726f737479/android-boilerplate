<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="userResponse"
                type="com.brainbeanapps.android_boilerplate.data.remote.model.UserResponse"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:imageUrl="@{userResponse.avatarUrl}"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/userAvatar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerInside"
                tools:src="@mipmap/ic_launcher"/>

        <TextView
                android:text="@{userResponse.login}"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toRightOf="@+id/userAvatar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:text="rostdev"/>

        <TextView
                android:text="@{userResponse.htmlUrl}"
                style="@style/TextAppearance.AppCompat.Body1"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:id="@+id/textView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:text="http://github/ghfhfgh/hjfjfj"/>
        <TextView
                android:text="@{userResponse.createdAt}"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:id="@+id/textView6"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                tools:text="06.06.2006"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_star"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</layout>